  "cookie": {
    "httpOnly": true,
    "secure": true
  },
  "authentication": {
    "loginUrl": "/login",
    "logoutUrl": "/logout"
  },
  "themeName": "hornet-themes-intranet",
  "security": {
    "enabled": true,
    "hpp": true,
    "ienoopen": true,
    "noSniff": true,
    "csp": {
      "enabled": true,
      "connectSrc": [
        "'self'"
      ],
      "scriptSrc": [
        "'self'",
        "'unsafe-inline'",
        "'unsafe-eval'"
      ],
      "styleSrc": [
        "'self'",
        "'unsafe-inline'"
      ],
      "fontSrc": [
        "'self'"
      ],
      "imgSrc": [
        "'self'"
      ],
      "reportOnly": false,
      "setAllHeaders": true,
      "disableAndroid": false
    },
    "frameguard": {
      "enabled": true,
      "mode": "deny",
      "allowFromPattern": ""
    },
    "xss": {
      "enabled": true,
      "setOnOldIE": true
    },
    "hpkp": {
      "enabled": true,
      "maxAge": 7776000000,
      "sha256s": [
        "AbCdEf123=",
        "ZyXwVu456="
      ],
      "includeSubdomains": true,
      "reportUri": null,
      "reportOnly": false
    },
    "hsts": {
      "enabled": false,
      "maxAge": 10886400000,
      "includeSubDomains": true,
      "preload": false
    },
    "csrf": {
      "enabled": true
    }
  },
  "logClient": {
    "remote": false,
    "level": "TRACE",
    "appenders": [{
        "type": "BrowserConsole",
        //        "layout": {
        //          "type": "pattern",
        //          "pattern": "%p|%c|%m%"
        //        },
        "layout": {
          "type": "THIN"
        }
      },
      {
        "type": "Ajax",
        "layout": {
          "type": "BASIC"
        },
        "threshold": 100,
        "timeout": 3000,
        "url": "/log"
      }
    ]
  },
  "defaultServices": {
    "host": "http://localhost:8888",
    "name": "hornet-showroom/services"
  },
  "authentication": {
    "loginUrl": "/login",
    "logoutUrl": "/logout"
  },
  "cache": {
    "enabled": true,
    "timetolive": 60
  }
}