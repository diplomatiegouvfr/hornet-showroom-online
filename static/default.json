{
  "contextPath": "hornetshowroom",
  "welcomePage": "/accueil",
  "communityLink": {
    "git": {
      "hubGen": "https://github.com/diplomatiegouvfr",
      "hubDoc": "https://github.com/diplomatiegouvfr/hornet-man",
      "labGen": "https://gitlab01.devng.diplomatie.gouv.fr/gitlab/",
      "labDoc": "https://gitlab01.devng.diplomatie.gouv.fr/gitlab/hornet.js"
    },
    "twitter": "https://twitter.com/FrameworkHornet",
    "facebook": ""
  },

  //"gitlabUrl": "https://gitlab01.devng.diplomatie.gouv.fr/gitlab/hornet.js",

  "localeI18n": {
    "locale": "fr-FR",
    "lang": "fr"
  },
  "server": {
    "route": "js1",
    "port": 8888,
    "portMonitor": 9999,
    "keepAlive": true,
    "keepAliveTimeout": 15000,
    "maxConnections": 100,
    "timeout": 300000,
    "uploadFileSize": 1000000,
    "sessionTimeout": 1800000,
    "stackTraceLimit": 100,
    "bodyParserLimit": "50mb"
